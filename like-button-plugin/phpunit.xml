<?xml version="1.0" encoding="UTF-8"?>
<phpunit>
    <testsuites>
        <testsuite name="MyTestSuite">
            <directory>./tests/unit</directory>
            <directory>./tests/integration</directory> <!-- integration テストも追加 -->
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory> <!-- コードカバレッジの対象 -->
        </whitelist>
        <blacklist>
            <directory>./tests</directory> <!-- テストコードをカバレッジから除外 -->
        </blacklist>
    </filter>

    <php>
        <ini name="error_reporting" value="-1"/> <!-- 開発時には便利だが注意 -->
        <ini name="display_errors" value="1"/> <!-- エラーメッセージを表示 -->
    </php>
</phpunit>
